<div class="container gap-3">
  <div class="d-flex mt-4">
    <%= image_tag "olga_user_avatar.JPG", class: "avatar-large me-auto bd-highlight" %>
    <h5 class="mt-3">Bonjour,  <span class="text-color fw-bolder"><%= current_user.username %></span> !</h5>
  </div>
  <p class= "text fst-italic">"Pour pouvoir contempler un arc-en-ciel, il faut d'abord endurer la pluie."</p>
</div> 
         <!--  -->
<div class="dashboard-container" data-controller="dashboard">
  <div class="wrapper">
    <div class="main_body">
      <div class="sidebar_menu">
        <div class="inner__sidebar_menu">
          <ul class="d-flex flex-column align-items-center p-0">
            <li data-action="click->dashboard#displayJournal">
              <p>
                <span><%=image_tag "journal.png", width: 42, class: "icon" %></span>
              </p>
              <div data-dashboard-target="journal" class="card-box bg-violet card-hidden">
                <div class="inner">
                  <h3><%= link_to "Mon journal d'activite", filters_path, class: "text-decoration-none tab-underlined " %></h3>
                  <% @journal_entries.each do |entry| %>
                  <div class="d-flex justify-content-between w-100 p-2 ">
                    <div class="journal-left ">
                      <%= entry.created_at.strftime("%a %d") %>
                    </div>
                    <div class="journal-right">
                      <%= entry.created_at.strftime("at %I:%M%p") %>
                      <%= entry.content %>
                    </div>
                  </div>
                  <% end %> 
                </div>
              </div>
            </li>
            <li>
              <p>
              <span><%=image_tag "diary.png", width: 42, class: "icon" %></span>

              </p>
            </li>
            <li data-action="click->dashboard#displayWishlist">
              <p>
                <span><%=image_tag "heart-shape.png", width: 42, class: "icon" %></span>
              </p>
              <div data-dashboard-target="wishlist" class="card-box bg-violet card-hidden">
                <div class="inner">
                  <h3><%= link_to "My wishlist", filters_path, class: "text-decoration-none tab-underlined" %></h3>
                  <% @wishlist_cards.each do |card| %>
                    <%= card.name %>
                  <% end %>
                </div>  
              </div>
            </li>
          
          </ul>
        </div>
      </div>       
    </div>
  </div> 
</div>
<div class="image">
<%= image_tag "creativity.png",  class:"raibow" %>
</div>

        
        
    